<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorAccent">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius" />
            <stroke
                android:width="@dimen/small_border"
                android:color="@color/semiTransparentColor" />
        </shape>
    </item>
    <item android:id="@android:id/mask">
        <inset
            android:insetLeft="@dimen/small_border"
            android:insetTop="@dimen/small_border"
            android:insetRight="@dimen/small_border"
            android:insetBottom="@dimen/small_border">
            <shape android:shape="rectangle">
                <!-- Color doesn't matter -->
                <solid android:color="@android:color/white" />
            </shape>
        </inset>
    </item>
</ripple>
