<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/instructions_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.InstructionsFragment">


        <ImageView
            android:id="@+id/instructions_header_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/nav_header_height_modified"
            android:background="@color/semiTransparentColor"
            android:paddingTop="@dimen/padding_very_large"
            android:paddingBottom="@dimen/padding_mid"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_logo_goal_chaser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/instructions_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_middle"
            android:text="@string/instructions_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instructions_header_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>