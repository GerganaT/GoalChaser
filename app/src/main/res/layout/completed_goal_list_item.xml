<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/completed_task_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_middle"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginEnd="@dimen/margin_middle"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@drawable/border"
    android:padding="@dimen/margin_middle">

    <ImageView
        android:id="@+id/completed_task_checkmark_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_goal_checkmark" />

    <TextView
        android:id="@+id/completed_goal_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/goal_title_text_size"
        app:layout_constraintEnd_toStartOf="@+id/completed_goal_date_text"
        app:layout_constraintStart_toEndOf="@+id/completed_task_checkmark_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Goal Title" />

    <TextView
        android:id="@+id/completed_goal_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/goal_title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="21/3/2022" />
</androidx.constraintlayout.widget.ConstraintLayout>